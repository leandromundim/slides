.reveal
    h1
        font-size 3.5em
        line-height 0.9em
    .main-title
        margin-bottom 50px
    .main-links
        font-size 0.8em
    .heart
        display inline-block
        background-image url("../img/heart.svg")
        width 110px
        height 110px
        margin 0 20px -10px
        &.activated
            animation pulse 1.3s ease
            animation-iteration-count 4
    .align-left
        text-align left
    hr
        border 1px dashed rgba(255,255,255, 0.3)
    > .backgrounds
        background #000
        
    .list-none
        list-style: none
        font-size: 30px
    .main-item
        color: #05C51D
        font-weight: bold
        padding-bottom: 15px
    .list-itens
        list-style none
        margin-top 80px
        li
            display: inline-block
            text-align: center
            border 1px dashed #ccc
            width 25%
            height 178px
            vertical-align middle
            padding 2%
            margin 1%
            &.visualizers
                border-color #ffd817
                line-height 170px
            &.dsp
                line-height 58px
                border-color #ffd817
            &.web-audio
                padding 71px 2% 0
                height 147px
                border-color #ffd817
                
    .web-audio-options
        margin-top 40px
    .highlight-item
        color #ffd817
    section img
        border none
        background transparent
    .non-style
        list-style: none
        margin 0
    .bigger-link
        font-size: 55px
    .space-top
        margin-top: 80px
    .col
        margin-top: 60px
        display: inline-block
        float: left
    .col-70
        width 70%
    .col-33
        width 33%
    .col-30
        width 30%
    .move-left-minor
        padding-left 5%
    .move-left
        padding-left 90px
    pre
        width 100% !important
    code
        font-size 27px
        line-height 40px
        padding 30px !important
    .case-video,
    .link-case,
    .bottom
        position: absolute
        bottom: 0
    .link-case
        right: -150px
        font-size: 3rem
        color: #fff
        text-align: center
        text-shadow: 2px 2px 6px #000
        background: #000
        padding: 5px 10px
        line-height: 3rem
        right: 0
        &.top
            position: relative
            top: 0
            bottom: none
            font-size: 2rem
            
    .btn-player
        border: 2px solid #ffd817
        background: transparent
        color: #ffd817
        padding: 5px 15px
        border-radius: 10px
        margin: 0 5px
        font-size: 1.4rem
        cursor: pointer
        &:hover,
        &:focus
            background: #ffd817
            color: #000
            outline: none
    img
        border: none
        box-shadow: none !important
    #meter
        width: 500px
        height: 100px
    .slide-white
        background: #fff !important
        color: #000 !important
    .line-height-better
        line-height: 4rem
        text-transform: none
        font-size: 3rem
    .minor-font
        font-size: 1.8rem
        margin-top: 45px
        
pre.prettyprint
    border: none !important
pre .pln
    color:#fffdeb
pre .str
    color:#aaee22
pre .kwd
    color:#ff0077
pre .com
    color:#727879
pre .typ
    color:#fff
pre .lit
    color:#ffb412
pre .pun,.opn,.clo
    color:#04dbe5
pre .tag
    color:#04dbe5
pre .atn
    color:#606
pre .atv
    color:#080
pre .dec,.var
    color:red
pre .fun
    color:red

.pln{color:#000}@media screen{.str{color:#080}.kwd{color:#008}.com{color:#800}.typ{color:#606}.lit{color:#066}.pun,.opn,.clo{color:#660}.tag{color:#008}.atn{color:#606}.atv{color:#080}.dec,.var{color:#606}.fun{color:red}}@media print,projection{.str{color:#060}.kwd{color:#006;font-weight:bold}.com{color:#600;font-style:italic}.typ{color:#404;font-weight:bold}.lit{color:#044}.pun,.opn,.clo{color:#440}.tag{color:#006;font-weight:bold}.atn{color:#404}.atv{color:#060}}pre.prettyprint{padding:2px;border:1px solid #888}ol.linenums{margin-top:0;margin-bottom:0}li.L0,li.L1,li.L2,li.L3,li.L5,li.L6,li.L7,li.L8{list-style-type:none}li.L1,li.L3,li.L5,li.L7,li.L9{background:#eee}

@keyframes pulse
  0% 
        transform scale(1)
  50% 
        transform: scale(1.3)
  100%
        transform: scale(1)
